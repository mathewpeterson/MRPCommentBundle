    "description": "A Symfony2 Bundle to add threaded comments to your applications.",
    "keywords": ["threads", "comments"],
    "license": "MIT",
    "authors": [
        {
            "name": "Mathew Peterson",
            "email": "mathewpeterson@me.com"
        }
    ],
    "support": {
        "issues": "https://github.com/mathewpeterson/mrpcommentbundle/issues"
    },
    "require": {
        "php": ">= 5.5.23"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.8@dev"
    },
    "autoload": {
      "psr-0": { "MRP\\MRPCommentBundle": "src/" }
    },
    "target-dir": "MRP/MRPCommentBundle"
